<?xml version="1.0" encoding="utf-8"?>
<com.worknrole.design.ui.userprofileconcept.view.UPCContentView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/upc_contentView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.uncopt.android.widget.text.justify.JustifiedTextView
        android:id="@+id/upc_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="@string/upc_textDescription"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:layout_below="@id/upc_description">

        <android.support.v7.widget.CardView
            android:id="@+id/upc_carView"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upc_textMovie"
                android:padding="10dp"
                android:textAllCaps="true"
                android:textSize="14sp"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/upc_recyclerView"
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upc_description"/>

</com.worknrole.design.ui.userprofileconcept.view.UPCContentView>