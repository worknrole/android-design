<?xml version="1.0" encoding="utf-8"?>
<com.worknrole.design.ui.qplanningapp.view.SocialItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="@dimen/qplanningapp_social_item_margin_top"
    android:layout_marginRight="20dp">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/qplanningapp_social_item_padding">

        <com.worknrole.framework.view.image.CircledImageView
            android:id="@+id/picture"
            android:layout_width="0dp"
            app:layout_widthPercent="20%"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            app:layout_widthPercent="60%"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/picture"
            android:layout_toEndOf="@id/picture"
            android:text="@string/unknown"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            app:layout_widthPercent="60%"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/picture"
            android:layout_toEndOf="@id/picture"
            android:layout_below="@id/name"
            android:text="@string/unknown"
            android:textSize="12sp"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            app:layout_widthPercent="20%"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/description"
            android:gravity="right|end"
            android:textSize="12sp"/>

    </android.support.percent.PercentRelativeLayout>

</com.worknrole.design.ui.qplanningapp.view.SocialItemView>