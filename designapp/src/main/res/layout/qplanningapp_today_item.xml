<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/info"
            android:orientation="horizontal"
            android:layout_width="0dp"
            app:layout_widthPercent="65%"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/date"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.35"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/qplanningapp_border_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="@string/today"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="@string/today_hour"
                    android:textSize="12sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="@string/today_urgent"
                    android:textSize="10sp"
                    android:textColor="@color/colorDescription"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/description"
                android:layout_toRightOf="@id/date"
                android:layout_toEndOf="@id/date"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.65"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today_title"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today_date"
                    android:textSize="11sp"
                    android:textColor="@color/colorDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today_location"
                    android:textSize="11sp"
                    android:textColor="@color/colorDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today_duration"
                    android:textSize="11sp"
                    android:textColor="@color/colorDescription"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            app:layout_widthPercent="35%"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            android:src="@drawable/qplanningapp_map"/>

    </android.support.percent.PercentRelativeLayout>



</android.support.v7.widget.CardView>